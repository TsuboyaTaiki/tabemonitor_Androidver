<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.bnv_test.DashboardFragment"
    android:id="@+id/fragment_dashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedscrollview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clear"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >
        <RadioGroup
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:id="@+id/RadioGroupB"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <RadioButton
                android:text="すべて"
                android:id="@+id/All"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_radio_left"
                android:textColor="@drawable/btn_radio_textcolor"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center">
            </RadioButton>
            <RadioButton
                android:text="肉"
                android:id="@+id/Meat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_radio_center"
                android:textColor="@drawable/btn_radio_textcolor"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center">
            </RadioButton>
            <RadioButton
                android:text="魚"
                android:id="@+id/Fish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_radio_center"
                android:textColor="@drawable/btn_radio_textcolor"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center">
            </RadioButton>
            <RadioButton
                android:text="野菜"
                android:id="@+id/Vegetable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_radio_center"
                android:textColor="@drawable/btn_radio_textcolor"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center">
            </RadioButton>
            <RadioButton
                android:text="ごはん"
                android:id="@+id/Other"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_radio_center"
                android:textColor="@drawable/btn_radio_textcolor"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center">
            </RadioButton>
            <RadioButton
                android:text="考案"
                android:id="@+id/Suggest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_radio_right"
                android:textColor="@drawable/btn_radio_textcolor"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center">
            </RadioButton>
        </RadioGroup>
    </android.support.v4.widget.NestedScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_gray"/>
    <ListView
        android:id="@+id/recipe_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:paddingLeft="@dimen/side_padding"/>
    </LinearLayout>
    <!--レシピ追加ボタン-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/vermilion"
        android:src="@drawable/icon_fab2"
        app:borderWidth="0dp" />
</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <stroke
                android:width="0dp"
                android:color="@color/orange_yellow"/>
            <solid
                android:color="@color/clear_verywhite" />
            <corners
                android:bottomLeftRadius="@dimen/popup_corner"
                android:topLeftRadius="@dimen/popup_corner"
                android:bottomRightRadius="@dimen/popup_corner"
                android:topRightRadius="@dimen/popup_corner"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <stroke
                android:width="0dp"
                android:color="@color/orange"/>
            <solid
                android:color="@color/clear_gray" />
            <corners
                android:bottomLeftRadius="@dimen/popup_corner"
                android:topLeftRadius="@dimen/popup_corner"
                android:bottomRightRadius="@dimen/popup_corner"
                android:topRightRadius="@dimen/popup_corner"/>
        </shape>
    </item>
</selector>
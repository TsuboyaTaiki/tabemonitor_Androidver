<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <stroke
                android:width="1dp"
                android:color="@color/bright_pink"/>
            <solid
                android:color="@color/clear_verywhite" />
            <corners
                android:bottomRightRadius="@dimen/button_corner"
                android:topRightRadius="@dimen/button_corner"
                android:bottomLeftRadius="@dimen/button_corner"
                android:topLeftRadius="@dimen/button_corner" />
        </shape>
    </item>
</selector>